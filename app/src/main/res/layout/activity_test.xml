<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.hiriganaapp.monster.hiriganaapp.View.TestActivity">

    <TextView
        android:id="@+id/currentCardNumber_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/yes_Button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="/"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/currentCardNumber_textView"
        android:id="@+id/textView"
        android:layout_marginLeft="14dp"
        android:layout_alignTop="@+id/currentCardNumber_textView"
        android:layout_toRightOf="@+id/currentCardNumber_textView" />
    <TextView
        android:id="@+id/totalCardNumber_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/textView"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView" />

    <TextView
        android:id="@+id/hiraganaDisplay_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/currentCardNumber_textView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/currentCardNumber_textView" />

    <Button
        android:id="@+id/no_Button"
        android:text="@string/testNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/hiraganaDisplay_textView"
        android:layout_toRightOf="@+id/yes_Button"
        android:layout_toEndOf="@+id/yes_Button" />

    <Button
        android:id="@+id/yes_Button"
        android:text="@string/testYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/no_Button"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
